<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="school.journal.entity.Token" table="token" schema="school_journal_db">
        <id name="userId">
            <column name="master_id"  sql-type="int(10) unsigned"/>
        </id>
        <property name="value">
            <column name="value" sql-type="text" not-null="true"/>
        </property>
        <property name="active">
            <column name="active" sql-type="tinyint(1)"/>
        </property>
        <one-to-one name="user" class="school.journal.entity.User"/>
    </class>
</hibernate-mapping>